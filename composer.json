{
    "name": "eirikref/loom",
    "description": "Simple PHP Library/Framework",
    "keywords": [
        "library",
        "framework"
    ],
    "homepage": "https://github.com/eirikref/Loom",
    "license": "MIT",
    "authors": [
        {
            "name": "Eirik Refsdal",
            "email": "eirikref@gmail.com",
            "homepage": "http://www.refsdal.no/eirik",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-0": {
            "Loom\\": "src/" 
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/eirikref/fiber"
        }
    ],
    "require": {
        "psr/log": "*"
    },
    "require-dev": {
        "eirikref/fiber": "dev-master",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3",
        "phpmd/phpmd": "^2",
        "phploc/phploc": "^7",
        "phpdocumentor/phpdocumentor": "^3",
        "php-coveralls/php-coveralls": "^2"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    }
}
